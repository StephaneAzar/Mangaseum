<p id="notice"><%= notice %></p>

<h1>SHONEN</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Mangaka</th>
      <th>Year</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mangas.each do |manga| %>
      <tr>
        <td><%= manga.title %></td>
        <td><%= manga.genre %></td>
        <td><%= manga.mangaka %></td>
        <td><%= manga.year %></td>
        <td><%= manga.description %></td>
        <td><%= image_tag manga.image_url, class: 'img-fluid' %></td>
        <td class="show"><%= link_to 'Show', manga %></td>
        <td class="edit"><%= link_to 'Edit', edit_manga_path(manga) %></td>
        <td class="destroy"><%= link_to 'Destroy', manga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

